<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Luyện Tập Từ Vựng</title>
    <link rel="icon" href="/static/images/favicon.png">
    <script src="/static/js/authentication.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="/static/css/animate.css">
    <!-- Owl Carousel CSS -->
    <link rel="stylesheet" href="/static/css/owl.carousel.min.css">
    <!-- Themify Icons -->
    <link rel="stylesheet" href="/static/css/themify-icons.css">
    <!-- Flaticon CSS -->
    <link rel="stylesheet" href="/static/css/flaticon.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="/static/css/magnific-popup.css">
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="/static/css/slick.css">    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Custom Styles -->
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/main.css">

    <style>
        /* Container tổng thể cho danh sách bài tập */
        .exercises-container {
            margin: 140px auto 50px auto;
            max-width: 1000px;
            min-width: 300px;
        }

        /* Tiêu đề chính của trang */
        h2 {
            color: #333;
            margin-bottom: 30px;
            text-align: center;
            font-weight: bold;
        }

        /* Định dạng từng thẻ bài tập */
        .exercise-card {
            margin-top: 15px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 25px 20px;
            text-align: center;
            margin-bottom: 20px;
            transition: all 0.3s ease-in-out;
        }

        /* Hiệu ứng khi hover vào thẻ bài tập */
        .exercise-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        /* Căn chỉnh nội dung trong thẻ bài tập */
        .exercise-card .row {
            align-items: center;
        }

        /* Phần thông tin bài tập */
        .exercise-info {
            padding-left: 20px;
        }

        .exercise-info h4 {
            font-weight: bold;
            font-size: 1.2rem;
            color: #007bff;
        }

        .exercise-info p {
            margin: 5px 0;
            color: #555;
        }

        /* Nút chi tiết */
        .detail-link {
            font-size: 16px;
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .detail-link:hover {
            color: #0056b3;
        }

        /* Đường kẻ ngang giữa các thẻ bài tập */
        .divider {
            margin: 15px 0;
            border-top: 1px solid #ddd;
        }
        /* CSS cho phân trang */
        .pagination {
            justify-content: center;
            margin-top: 20px;
        }
        .pagination .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }
    </style>
</head>
<body>
    <%- include('../partials/menu.ejs') %>
    <div class="container exercises-container">
        <h2 class="text-center">Luyện Tập Từ Vựng</h2>
        <div id="exercises-list" class="row"></div>

        <!-- Phân trang -->
        <nav aria-label="Page navigation">
            <ul class="pagination" id="pagination-controls"></ul>
        </nav>
    </div>
    <%- include('../partials/footer.ejs') %>

    <!-- Script Files -->
    <script src="/static/js/jquery-1.12.1.min.js"></script>
    <script src="/static/js/popper.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/jquery.magnific-popup.js"></script>
    <script src="/static/js/swiper.min.js"></script>
    <script src="/static/js/masonry.pkgd.js"></script>
    <script src="/static/js/owl.carousel.min.js"></script>
    <script src="/static/js/jquery.nice-select.min.js"></script>
    <script src="/static/js/slick.min.js"></script>
    <script src="/static/js/jquery.counterup.min.js"></script>
    <script src="/static/js/waypoints.min.js"></script>
    <script src="/static/js/custom.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>   

    <!-- Custom Script để lấy dữ liệu và phân trang -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            fetchVocabularyExercises(1); // Bắt đầu với trang đầu tiên
        });

        // Hàm lấy danh sách bài tập từ API với phân trang
        function fetchVocabularyExercises(page = 1) {
            fetch(`/vocabulary-exercise/api/vocabulary-exercises?page=${page}&limit=2`) // Đổi URL API cho phù hợp
                .then(response => response.json())
                .then(data => {
                    const exercisesList = document.getElementById("exercises-list");
                    const paginationControls = document.getElementById("pagination-controls");
                    exercisesList.innerHTML = ''; // Xóa nội dung cũ
                    paginationControls.innerHTML = ''; // Xóa phân trang cũ

                    // Kiểm tra dữ liệu trả về từ API
                    if (data.success && data.data.length > 0) {
                        // Hiển thị danh sách bài tập
                        data.data.forEach((exercise) => {
                            const exerciseCard = `
                                <div class="col-md-4">
                                    <div class="exercise-card">
                                        <h4>${exercise.title}</h4>
                                        <p>${exercise.questions.length} câu hỏi</p>
                                        <a href="/vocabulary-exercise/detail/${exercise._id}" class="detail-link">Luyện tập</a>
                                    </div>
                                </div>
                            `;
                            exercisesList.innerHTML += exerciseCard;
                        });

                        // Gọi hàm để hiển thị phân trang
                        renderPagination(data.currentPage, data.totalPages);
                    } else {
                        exercisesList.innerHTML = '<p class="text-center">Không có bài tập nào.</p>';
                    }
                })
                .catch(error => console.error('Error fetching vocabulary exercises:', error));
        }

        // Hàm hiển thị phân trang
        function renderPagination(currentPage, totalPages) {
            const paginationControls = document.getElementById("pagination-controls");

            // Thêm nút "Previous" nếu trang hiện tại lớn hơn 1
            if (currentPage > 1) {
                paginationControls.innerHTML += `
                    <li class="page-item">
                        <a class="page-link" href="#" onclick="fetchVocabularyExercises(${currentPage - 1})">&laquo; Previous</a>
                    </li>
                `;
            }

            // Thêm các nút số trang
            for (let i = 1; i <= totalPages; i++) {
                paginationControls.innerHTML += `
                    <li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="#" onclick="fetchVocabularyExercises(${i})">${i}</a>
                    </li>
                `;
            }

            // Thêm nút "Next" nếu trang hiện tại nhỏ hơn tổng số trang
            if (currentPage < totalPages) {
                paginationControls.innerHTML += `
                    <li class="page-item">
                        <a class="page-link" href="#" onclick="fetchVocabularyExercises(${currentPage + 1})">Next &raquo;</a>
                    </li>
                `;
            }
        }
    </script>
</body>
</html>
