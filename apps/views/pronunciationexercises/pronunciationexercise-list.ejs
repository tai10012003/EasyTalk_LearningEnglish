<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pronunciation Exercises</title>
    <link rel="icon" href="/static/images/favicon2.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <!-- Additional CSS Libraries -->
    <link rel="stylesheet" href="/static/css/animate.css">
    <link rel="stylesheet" href="/static/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/static/css/themify-icons.css">
    <link rel="stylesheet" href="/static/css/flaticon.css">
    <link rel="stylesheet" href="/static/css/magnific-popup.css">
    <link rel="stylesheet" href="/static/css/slick.css">
    <!-- Custom Styles -->
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/main.css">
    
    <!-- Custom Styles -->
    <style>

        /* Container tổng thể cho danh sách bài tập */
        .exercises-container {
            margin: 135px auto 50px auto;
            max-width: 1000px;
            min-width: 300px;
        }

        /* Tiêu đề chính của trang */
        h2 {
            color: #333;
            margin-bottom: 30px;
            text-align: center;
            font-weight: bold;
        }

        /* Định dạng từng thẻ bài tập */
        .exercise-card {
            margin-top: 15px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
            transition: all 0.3s ease-in-out;
        }

        /* Hiệu ứng khi hover vào thẻ bài tập */
        .exercise-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        /* Căn chỉnh nội dung trong thẻ bài tập */
        .exercise-card .row {
            align-items: center;
        }

        /* Phần thông tin bài tập */
        .exercise-info {
            padding-left: 20px;
        }

        .exercise-info h4 {
            font-weight: bold;
            font-size: 1.2rem;
            color: #007bff;
        }

        .exercise-info p {
            margin: 5px 0;
            color: #555;
        }

        /* Nút chi tiết */
        .detail-link {
            font-size: 16px;
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .detail-link:hover {
            color: #0056b3;
        }

        /* Đường kẻ ngang giữa các thẻ bài tập */
        .divider {
            margin: 15px 0;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <%- include('../partials/menu.ejs') %>
    <div class="container exercises-container">
        <h2>Danh sách bài tập phát âm</h2>
        <div class="row">
            <% exercises.forEach((exercise) => { %>
                <div class="col-md-4">
                    <div class="exercise-card">
                        <div class="row">
                            <div class="col-md-12 exercise-info">
                                <h4><%= exercise.title %></h4>
                                <p><%= exercise.questions.length %> Questions</p>
                                <a href="/pronunciation-exercise/detail/<%= exercise._id %>" class="detail-link">Luyện tập</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Chia khoảng cách giữa các bài tập -->
                <div class="col-12">
                    <div class="divider"></div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
    <script src="/static/js/jquery-1.12.1.min.js"></script>
    <script src="/static/js/popper.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/jquery.magnific-popup.js"></script>
    <script src="/static/js/swiper.min.js"></script>
    <script src="/static/js/masonry.pkgd.js"></script>
    <script src="/static/js/owl.carousel.min.js"></script>
    <script src="/static/js/jquery.nice-select.min.js"></script>
    <script src="/static/js/slick.min.js"></script>
    <script src="/static/js/jquery.counterup.min.js"></script>
    <script src="/static/js/waypoints.min.js"></script>
    <script src="/static/js/custom.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>  
</body>
</html>
