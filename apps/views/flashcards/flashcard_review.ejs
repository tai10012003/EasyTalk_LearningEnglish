<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Luyện Tập Từ Vựng Flashcard</title>
    <link rel="icon" href="/static/images/favicon.png">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="/static/css/bootstrap.min.css">
        <!-- Animate CSS -->
        <link rel="stylesheet" href="/static/css/animate.css">
        <!-- Owl Carousel CSS -->
        <link rel="stylesheet" href="/static/css/owl.carousel.min.css">
        <!-- Themify Icons -->
        <link rel="stylesheet" href="/static/css/themify-icons.css">
        <!-- Flaticon CSS -->
        <link rel="stylesheet" href="/static/css/flaticon.css">
        <!-- Font Awesome CSS -->
        <link rel="stylesheet" href="/static/css/magnific-popup.css">
        <!-- Swiper CSS -->
        <link rel="stylesheet" href="/static/css/slick.css">

        <!-- Custom Styles -->
        <link rel="stylesheet" href="/static/css/style.css">
        <link rel="stylesheet" href="/static/css/main.css">
        
    <link
      rel="stylesheet"
      type="text/css"
      href="/static/css/flashcard_review.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <%- include('../partials/menu.ejs') %>
    <div class="container flashcard-container">
      <div class="custom-container d-flex flex-column justify-content-center my-4">
        <div class="content">
          <div class="row align-items-center">
            <div class="col-md-12">
              <h2 class="my-4" style="text-transform: uppercase;">Luyện tập: <%= flashcardList.name %></h2>
            </div>
            <div class="col-md-12">
              <div class="d-flex justify-content-center">
                <button class="btn btn-outline-danger btn-lg btn-block mt-3 mb-3" style="width: 70%;" onclick="exitReviewing()">
                  <i class="bi bi-calendar-x"></i> Dừng học danh sách từ này
                </button>
              </div>              
            </div>
          </div>
        </div>
  
        <!-- Flashcard Section -->
        <div
          class="custom-container mt-4 d-flex justify-content-center align-items-center"
        >
          <div
            id="flashcard-wrapper"
            class="flashcard"
            onclick="flipCard()"
          ></div>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <div class="row">
            <div class="col-md-6">
              <button class="btn custom-btn mx-2" onclick="removeCurrentFlashcard()">
                Loại từ ra khỏi danh sách
              </button>
            </div>
            <div class="col-md-6">
              <button class="btn custom-btn mx-2" onclick="nextCard()">
                Tiếp theo
              </button>
            </div>
          </div>
        </div>

      </div>
    </div>
    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const flashcards = JSON.parse(`<%- JSON.stringify(flashcards) %>`);

      let currentCardIndex = 0;

      function shuffleFlashcardList(array) {
        for (let i = array.length - 1; i > 0; i--) {
          const j = Math.floor(Math.random() * (i + 1));
          [array[i], array[j]] = [array[j], array[i]];
        }
        return array;
      }

      function removeCurrentFlashcard() {
        if (flashcards.length > 0) {
              const isConfirmed = confirm("Bạn có muốn loại từ này khỏi luyện tập ?");
              
              if (isConfirmed) {
                  flashcards.splice(currentCardIndex, 1);
                  if (currentCardIndex >= flashcards.length) {
                      currentCardIndex = flashcards.length - 1;
                  }
                  displayCard(currentCardIndex);
              }
          }
      }

      const shuffleFlashcards = shuffleFlashcardList(flashcards);
      function displayCard(index) {
        const flashcard = shuffleFlashcards[index];
        const flashcardElement = document.getElementById("flashcard-wrapper");
        console.log(shuffleFlashcards);

        const imageHTML = flashcard.image
          ? `<img src="${flashcard.image}" alt="Image">`
          : "";

        flashcardElement.innerHTML = `
        <div class="flashcard-inner">
          <!-- Front of the flashcard -->
          <div class="flashcard-front">
            <div class="word">
              <strong>${flashcard.word}</strong>
            </div>
            <div class="d-flex justify-content-center align-items-center">
              <button class="btn btn-light btn-sm mx-2" onclick="playPronou(event)">
                <i class="bi bi-volume-up"></i>
              </button>
              <em class="pronunciation">(${flashcard.pos || "N/A"}) ${flashcard.pronunciation || ""}</em>
            </div>
            <i class="bi bi-arrow-repeat btn-flip"></i>
          </div>

          <!-- Back of the flashcard -->
          <div class="flashcard-back">
            <div>
              <p><strong>Định nghĩa:</strong> ${flashcard.meaning}</p>
              <p><strong>Ví dụ:</strong>
                ${flashcard.exampleSentence}
              </p>
            </div>
            
             ${imageHTML}
            <i class="bi bi-arrow-repeat btn-flip"></i>
          </div>
        </div>
      `;

        flashcardElement.classList.remove("is-flipped");
      }

      function nextCard() {
        if (flashcards.length > 0) {
          const randomIndex = Math.floor(Math.random() * flashcards.length);
          displayCard(randomIndex);
        }
      }


      function prevCard() {
        if (currentCardIndex > 0) {
          currentCardIndex--;
          displayCard(currentCardIndex);
        }
      }

      window.onload = () => {
        displayCard(currentCardIndex);
      };

      function playPronou(event) {
        event.stopPropagation();
        console.log("Playing UK pronunciation");
      }

      function flipCard() {
        const card = document.getElementById("flashcard-wrapper");
        card.classList.toggle("is-flipped");
      }

      function exitReviewing() {
        const userConfirmed = window.confirm(
          "Bạn có chắc chắn muốn dừng học và thoát khỏi danh sách từ này?"
        );
        if (userConfirmed) {
          window.history.replaceState(null, null, window.location.href);
          window.location.href = "/flashcards";
        }
      }
    </script>
    <script src="/static/js/jquery-1.12.1.min.js"></script>
    <script src="/static/js/popper.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/jquery.magnific-popup.js"></script>
    <script src="/static/js/swiper.min.js"></script>
    <script src="/static/js/masonry.pkgd.js"></script>
    <script src="/static/js/owl.carousel.min.js"></script>
    <script src="/static/js/jquery.nice-select.min.js"></script>
    <script src="/static/js/slick.min.js"></script>
    <script src="/static/js/jquery.counterup.min.js"></script>
    <script src="/static/js/waypoints.min.js"></script>
    <script src="/static/js/custom.js"></script>
  </body>
</html>
